<%= provide :title, 'Sign In' %>
<%= form_tag sessions_url do %>
	<%= label_tag :email, 'E-mail Address' %>
	<%= text_field_tag :email %>
	<%= label_tag :password %>
	<%= password_field_tag :password %><br/>
	<%= submit_tag 'Sign In', class: 'button' %>
	
<% end %>
<br/>
<p>Not a member? <%= link_to 'Sign Up!', new_user_url %></p>